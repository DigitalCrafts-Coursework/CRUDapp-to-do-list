<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header>
      <h3>What to do...?</h3>
    </header>
    <main>
      <div>
        <form action="http://localhost:3000/" method="POST">
          <input type="text" name="task" class="to-do-task" />
          <button type="submit" value="Submit">Submit</button>
        </form>
      </div>
      <div class="to-do">
        <h4>Tasks to do</h4>
        <% toDoTasks.forEach(task => { %>
        <div>
          <form
            id="deleteCheckbox"
            action="http://localhost:3000/delete"
            method="POST"
          >
            <input
              type="checkbox"
              class="deleteCheckbox"
              name="id"
              value="<%= task.id %>"
              onchange="this.form.submit();"
            />
          </form>
          <span class="task"><%=task.task%></span>
          <form
            id="updateCheckbox"
            action="http://localhost:3000/update"
            method="POST"
          >
            <input
              type="checkbox"
              class="updateCheckbox"
              name="id"
              value="<%= task.id %>"
              onchange="this.form.submit();"
            />
          </form>
        </div>
        <% }) %>
      </div>
      <div class="completed">
        <h4>Completed tasks</h4>
        <% completedTasks.forEach(task => { %>
        <div>
          <form
            id="deleteCheckbox"
            action="http://localhost:3000/delete"
            method="POST"
          >
            <input
              type="checkbox"
              class="deleteCheckbox"
              name="id"
              value="<%= task.id %>"
              onchange="this.form.submit();"
            />
          </form>
          <span class="task"><%=task.task%></span>
          <form
            id="returnCheckbox"
            action="http://localhost:3000/return"
            method="POST"
          >
            <input
              type="checkbox"
              class="updateCheckbox"
              name="id"
              value="<%= task.id %>"
              onchange="this.form.submit();"
            />
          </form>
        </div>
        <% }) %>
      </div>
    </main>
    <script src="/js/home.js"></script>
  </body>
</html>
